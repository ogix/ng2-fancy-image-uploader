{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    // "lib": [
    //   "dom",
    //   "es6"
    // ],
    "types": [
      "core-js",
      "node",
      "cropperjs"
    ]
  },
  "exclude": [
    "node_modules",
    "demo"
  ],
  "files": [
    "./index.ts"
  ]
}